<script>

$(function(){
	
	//체크박스 옆 글자선택해도 체크박스 선택되게
	$("b.allCheck").click(function(){
	
		if($("input.allCheck").is(":checked")){
			$("input.allCheck").attr("checked",false);
		}else{
			$("input.allCheck").attr("checked","checked");
		}
	});
});

